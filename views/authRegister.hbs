{{#> layout currentPage="Register"}}
    <main class="regist-section" action="/register" method="post">
      <form id="registForm" class="regist-form" action="/register" method="post">
        <h1 class="text-center mb-4px">Register</h1>
        <div class="form-field">
          <label for="name">Name</label>
          <input
            id="name"
            name="name"
            class="form-input"
            type="text"
            placeholder="name"
            required
          />
        </div>

        <div class="form-field">
          <label for="email">Email</label>
          <input
            id="email"
            name="email"
            class="form-input"
            type="email"
            placeholder="email"
            required
          />
        </div>

        <div class="form-field">
          <label for="password">Password</label>
          <input
            id="password"
            name="password"
            class="form-input"
            type="password"
            placeholder="password"
            required
          />
        </div>

                <div class="form-field">
          <label for="confirmPassword">Confirm Password</label>
          <input
            id="confirmPassword"
            name="confirmPassword"
            class="form-input"
            type="password"
            placeholder="confirm password"
            required
          />
        </div>
      {{#if error}}
      <div class="alert alert-danger" role="alert">
        {{error}}
      </div>
      {{/if}}
        <button type="submit" class="form-submit-button">Submit</button>
      </form>
    </main>
{{/layout}}
