{{#> layout currentPage="Project"}}
    <div class="container-form">
      <div class="bg-form">
        <h1 class="form-title">Add My Project</h1>
        <form
          class="form"
          action="/project"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label for="title">Title</label>
            <input
              type="text"
              id="title"
              name="title"
              placeholder="Title..."
              required
            />
          </div>

          <div class="bg-date">
            <div class="form-group">
              <label for="start">Start Date</label>
              <input
                type="date"
                id="start"
                name="startDate"
                placeholder="start..."
                required
                class="start-date"
              />
            </div>

            <div class="form-group">
              <label for="end">End Date</label>
              <input
                type="date"
                id="end"
                name="endDate"
                placeholder="end..."
                required
                class="end-date"
              />
            </div>
          </div>

          <div class="form-group">
            <label for="description">Description</label>
            <textarea
              id="description"
              name="description"
              placeholder="Description..."
              required
            ></textarea>
          </div>

          <div class="form-group">
            <label for="category">Categories</label>
            <div class="checkbox-group">
              <label class="checkbox-item">
                <input type="checkbox" name="categories[]" value="React" />
                <span class="checkbox-label">React</span>
              </label>
              <label class="checkbox-item">
                <input type="checkbox" name="categories[]" value="Laravel" />
                <span class="checkbox-label">Laravel</span>
              </label>
              <label class="checkbox-item">
                <input type="checkbox" name="categories[]" value="NextJs" />
                <span class="checkbox-label">NextJs</span>
              </label>
              <label class="checkbox-item">
                <input type="checkbox" name="categories[]" value="Vue" />
                <span class="checkbox-label">Vue</span>
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="image">Upload Image</label>
            <input
              type="file"
              id="image"
              name="image"
              accept="image/*"
            />
          </div>

          <button type="submit" class="submit-btn">Submit</button>
        </form>
      </div>
    </div>
    <script>
     document.addEventListener("DOMContentLoaded", function () {
       const form = document.querySelector(".form");
       const startDateInput = document.querySelector(".start-date");
       const endDateInput = document.querySelector(".end-date");

       form.addEventListener("submit", function (event) {
        const startDate = new Date(startDateInput.value);
        const endDate = new Date(endDateInput.value);

       if (startDate > endDate) {
        alert("Error: Start Date tidak boleh lebih besar dari End Date!");
        event.preventDefault(); // Mencegah form terkirim
       }
       });
     });
   </script>

{{/layout}}